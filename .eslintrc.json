{
    "extends": ["react-app", "plugin:prettier/recommended"],
    "globals": {
        "shallow": "readonly",
        "render": "readonly",
        "mount": "readonly",
        "spy": "readonly",
        "stub": "readonly"
    },
    "rules": {
        "indent": ["error", 4, {"SwitchCase": 1}],
        "prettier/prettier": [
            "error",
            {},
            {
                "usePrettierrc": true
            }
        ]
    }
}
